let x = 100;
let y = 0;
let ang = 0;

function setup() {
  createCanvas(400, 400);
}

function draw() {
  translate(200,200);
    background(220,10);

  
  x = cos(ang) * 100;
  y = sin(ang) * 100;
  stroke('magenta');
  strokeWeight(5);

line(x, y, 0, 0);
  circle(x, y, 50);
  
  ang += 0.02;
  
}
